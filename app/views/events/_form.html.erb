  <%= f.input :place, label:"Lieu", input_html:{id: 'gmaps-input-address'}, placeholder: 'Start typing a place...' %> <br>
 
  <%= f.input :longitude, input_html: {id: 'gmaps-output-latitude'}, as: :hidden, label: false %>
  
